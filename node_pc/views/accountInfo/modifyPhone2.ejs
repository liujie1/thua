<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <title><%= static.title %>-修改手机号</title>
    <link rel="stylesheet" href="<%= constant.base_url%>/css/app.css">
    <%- include('../components/constant') %>
    <!--libs-->
    <script data-main="<%= constant.base_url%>/scripts/modules/account/modifyPhone2" src="<%= constant.base_url%>/scripts/libs/requirejs/require.js"></script>
</head>

<body class="account">
    <!--导入头部-->
    <%- include('../components/subHeader') %>

    <!--主体内容-->
    <div class="row-container">
        <!--修改手机号-->
        <div class="module modify-phone-module">
            <!--title-->
            <div class="title">
                <h3 class="module-title">
                    修改手机号
                </h3>
            </div>
            <!--修改手机号表单-->
            <div class="modify-phone-form">
                <!-- 验证步骤 -->
                <div class="change-step container-width-s">
                    <div class="process-container">
                        <div class="reg-line"></div>
                        <!-- 3步骤 -->
                        <% if( cannotGetCode == "1" ){ %>
                            <div class="step"><span class="num">1</span><div class="step-name">安全验证</div></div>
                        <%} else {%>
                            <div class="step"><span class="num">1</span><div class="step-name">原手机验证</div></div>
                        <% } %>
                        
                        <div class="step step-active"><span class="num">2</span><div class="step-name">新手机验证</div></div>
                        <div class="step"><span class="num">3</span><div class="step-name">更换成功</div></div>
                        <div class="step-clearfix"></div>
                    </div>
                </div>
               
                <form action="<%= constant.base_url%>/account/modifyPhone2" method="POST" id="form">
                    <% if(errorMsg.message) {%>
                        <div class="tip-error form-tip">
                            <i></i><%= errorMsg.message%>
                            <button class="close-btn" id="tipCloseBtn" type="button"></button>
                        </div>
                    <%}%>
                    <label for="real-name" class="help-tip has-tip">
                        <span>手机号：</span>
                        <input class="real-name"
                                type="text"
                                name="mobile"
                                phone="phone"
                                required
                                minlength="11"
                                maxlength="11"
                                mobile="mobile"
                                value="" placeholder="请输入需要绑定的手机号">
                    </label>

                    <!--已发送验证码-->
                    <label for="get-verifycode" class="get-verifycode label-inner help-tip">
                        <span>验证码：</span>
                        <input id="get-verifycode"
                                type="text"
                                placeholder="输入验证码"
                                required
                                minlength="6"
                                maxlength="6"
                                number="number"
                                name="verification_code">
                        <button id="get-verifycode-btn"
                                 class="col tip-inifo get-verifycode-btn">
                                 获取验证码
                        </button>
                    </label>

                    <!--验证码提示信息-->
                    <div class="tip-info hide"
                        id="mobileTips">
                        验证码已发送至<strong id="hidePhone"></strong>手机，请注意查收！
                    </div>
                    <input type="hidden" name="smslog_serno" value="<%= fields.smslog_serno%>">

                    <!--下一步按钮-->
                    <div class="submit-btn">
                        <button type="submit">下一步</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--导入页脚-->
   <%- include('../components/footer') %>
</body>

</html>
